@using intapscamis.camis.domain.Report
@using intapscamis.camis.data.Entities
@model intapscamis.camis.domain.Farms.Models.ReportResponseModel
@{

    var originType = Model.ReferenceData.FarmOperatorOrigins;
    var farmTypes = Model.ReferenceData.FarmTypes;
}


<div>
    <table class="table table-stripped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="column-title">No</th>
                <th class="column-title">Name</th>
                <th class="column-title">Orgin</th>
                <th class="column-title">Investment Type</th>
                <th class="column-title" colspan="3">Farm Location</th>
                <th class="column-title">Farm Start Date</th>
                <th class="column-title numberValue">Area of Land</th>
            </tr>
            <tr class="headings">
                <th class="column-title"></th>
                <th class="column-title"></th>
                <th class="column-title"></th>
                <th class="column-title"></th>
                <th class="column-title">Region</th>
                <th class="column-title">Zone</th>
                <th class="column-title">Woreda</th>
                <th class="column-title"></th>
                <th class="column-title"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.FarmListReport.Count; i++)
            {
            <tr>
                <td class="column-title">@(i + 1)</td>
                <td class="column-title">@Model.FarmListReport[i].Name</td>
                <td class="column-title">@originType.Where(m => m.Id == Model.FarmListReport[i].Origin).First().Name</td>
                <td class="column-title">@farmTypes.Where(m => m.Id == Model.FarmListReport[i].Type).First().Name</td>
                <td class="column-title">@Model.FarmListReport[i].Region</td>
                <td class="column-title">@Model.FarmListReport[i].Zone</td>
                <td class="column-title">@Model.FarmListReport[i].Woreda</td>
                <td class="column-title">@(new DateTime(Model.FarmListReport[i].StartDate).ToShortDateString())</td>
                <td class="column-title numberValue">@(Math.Round(Model.FarmListReport[i].Area,2))</td>

            </tr>
            }
        </tbody>
    </table>
</div>